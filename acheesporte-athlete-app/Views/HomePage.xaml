<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acheesporte_athlete_app.Views.HomePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto, *" Padding="24">

        <!-- CABEÇALHO: Nome -->
        <StackLayout Grid.Row="0" Spacing="0" Margin="0,0,0,16">
            <Label Text="Bem-vindo,"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#222222" />
            <Label Text="{Binding UserName}"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#E94560" />
        </StackLayout>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="24">

                <!-- BARRA DE BUSCA -->
                <Frame Padding="0"
                       CornerRadius="10"
                       BorderColor="#E94560"
                       BackgroundColor="White"
                       HasShadow="False"
                       HeightRequest="56">
                    <SearchBar Placeholder="Buscar locais..."
                               BackgroundColor="Transparent"
                               HeightRequest="44"
                               TextColor="#222222"
                               PlaceholderColor="#888888" />
                </Frame>

                <!-- BOTÃO: Abrir Mapa -->
                <Button Text="Abrir Mapa"
                        BackgroundColor="#E94560"
                        TextColor="White"
                        CornerRadius="8"
                        FontAttributes="Bold"
                        HeightRequest="44" />

                <!-- CARTÃO: Próximo jogo -->
                <Frame CornerRadius="16"
                       Padding="16"
                       BackgroundColor="White"
                       HasShadow="True">
                    <StackLayout Spacing="2">
                        <Label Text="Próximo jogo"
                               FontAttributes="Bold"
                               TextColor="#E94560"
                               FontSize="15"/>
                        <Label Text="Arena Central - Quadra 3"
                               FontSize="13"
                               TextColor="#444444" />
                        <Label Text="Sábado, 01/06 às 10:00"
                               FontSize="12"
                               TextColor="#888888" />
                    </StackLayout>
                </Frame>

                <!-- CARTÃO: Resumo de Agendamentos -->
                <Frame CornerRadius="16"
                       Padding="20"
                       BackgroundColor="White"
                       HasShadow="True">
                    <StackLayout Spacing="16">

                        <Label Text="Resumo de agendamentos"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#888888"
                               HorizontalOptions="Center" />

                        <Grid ColumnSpacing="24">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackLayout Grid.Column="0" HorizontalOptions="Center">
                                <Label Text="Semana" FontSize="13" TextColor="#888888" />
                                <Label Text="2" FontSize="20" FontAttributes="Bold" TextColor="#222222" />
                            </StackLayout>

                            <StackLayout Grid.Column="1" HorizontalOptions="Center">
                                <Label Text="Mês" FontSize="13" TextColor="#888888" />
                                <Label Text="4" FontSize="20" FontAttributes="Bold" TextColor="#222222" />
                            </StackLayout>

                            <StackLayout Grid.Column="2" HorizontalOptions="Center">
                                <Label Text="Total" FontSize="13" TextColor="#888888" />
                                <Label Text="23" FontSize="20" FontAttributes="Bold" TextColor="#222222" />
                            </StackLayout>
                        </Grid>

                        <!-- STREAK -->
                        <HorizontalStackLayout HorizontalOptions="Center" Padding="0" Margin="0">
                            <Image Source="fire.gif" HeightRequest="24" WidthRequest="24"/>

                        </HorizontalStackLayout>
                        <Image Source="rat.png" MaximumHeightRequest="220" MaximumWidthRequest="220"/>
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Label Text="4" FontSize="16" FontAttributes="Bold" TextColor="#E94560"/>
                        <Label Text="semanas seguidas praticando!" FontSize="13" TextColor="#888888" HorizontalOptions="Center" />
                        </HorizontalStackLayout>


                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
