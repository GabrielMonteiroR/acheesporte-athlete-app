<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acheesporte_athlete_app.Views.HomePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="AliceBlue"
             Shell.BackgroundColor="AliceBlue"
             Shell.TabBarBackgroundColor="AliceBlue"
             Shell.TabBarForegroundColor="DeepPink"
             Shell.TabBarTitleColor="DeepPink">

    <Grid RowDefinitions="Auto,*" Padding="24">

        <!-- CABEÇALHO -->
        <StackLayout Grid.Row="0" Spacing="0" Margin="0,0,0,16">
            <Label Text="Bem-vindo,"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#222222" />
            <Label Text="{Binding UserName}"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#E94560" />
        </StackLayout>

        <!-- CONTEÚDO -->
        <ScrollView Grid.Row="1">
            <StackLayout Spacing="24">

                <!-- BARRA DE BUSCA -->
                <Frame CornerRadius="10"
                       Padding="0"
                       BorderColor="Honeydew"
                       BackgroundColor="White"
                       HasShadow="True"
                       HeightRequest="56">
                    <SearchBar Placeholder="Buscar locais..."
                               BackgroundColor="Transparent"
                               HeightRequest="44"
                               TextColor="#222222"
                               PlaceholderColor="#888888" />
                </Frame>

                <!-- BOTÃO MAPA -->
                <Button Text="Buscar Locais"
        BackgroundColor="#E94560"
        TextColor="White"
        CornerRadius="8"
        FontAttributes="Bold"
        HeightRequest="44"
        Command="{Binding NavigateToMapCommand}" />


                <!-- CARTÃO: PRÓXIMO JOGO -->
                <Frame CornerRadius="16" Padding="16" HasShadow="True" BackgroundColor="White">
                    <StackLayout Spacing="2">
                        <Label Text="Próximo jogo"
                               FontAttributes="Bold"
                               TextColor="#E94560"
                               FontSize="15"/>
                        <Label Text="Arena Central - Quadra 3"
                               FontSize="13"
                               TextColor="#444444"/>
                        <Label Text="Sábado, 01/06 às 10:00"
                               FontSize="12"
                               TextColor="#888888"/>
                    </StackLayout>
                </Frame>

                <!-- CARTÃO: RESUMO + STREAK -->
                <Border Stroke="Transparent" StrokeThickness="1" BackgroundColor="White" Padding="12">
                    <StackLayout Spacing="8">

                        <!-- TÍtulo do card -->
                        <Label Text="Resumo de agendamentos"
                               FontAttributes="Bold"
                               FontSize="14"
                               TextColor="#888888"
                               HorizontalOptions="Center"/>

                        <!-- STREAK no topo do card -->
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="6">
                            <Image Source="fire.png" HeightRequest="24" WidthRequest="24"/>
                            <Label Text="4 semanas seguidas praticando!"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#E94560"/>
                        </HorizontalStackLayout>

                        <!-- ILUSTRAÇÃO -->
                        <Image Source="rat.png"
                               MaximumHeightRequest="220"
                               MaximumWidthRequest="220"
                               HorizontalOptions="Center"/>

                        <!-- Mensagem motivacional -->
                        <Label Text="Continue firme!"
                               FontSize="14"
                               FontAttributes="Italic"
                               TextColor="#888888"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </Border>

            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
