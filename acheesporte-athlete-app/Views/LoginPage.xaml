<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:viewmodels="clr-namespace:acheesporte_athlete_app.ViewModels"  
             x:Class="acheesporte_athlete_app.Views.LoginPage"  
             x:DataType="viewmodels:LoginViewModel"  
             BackgroundColor="#E94560"
             Shell.NavBarIsVisible="False"  
             Shell.PresentationMode="Animated"  
             NavigationPage.HasNavigationBar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Section with Logo and Title -->
        <Grid Grid.Row="0" Padding="24,4,4,4" HeightRequest="200">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Source="logo_achesporte.png"  
                   HeightRequest="68" WidthRequest="68"  
                   VerticalOptions="Start" HorizontalOptions="End"  
                   Grid.Column="1" Margin="4" />

            <StackLayout VerticalOptions="Start" HorizontalOptions="Start" Spacing="0"  
                         Grid.Column="0" Margin="0,64,0,0">
                <Label Text="Bem-vindo," FontSize="28" FontAttributes="Bold" TextColor="White" />
                <Label Text="Jogador!" FontSize="32" FontAttributes="Bold" TextColor="White" />
                <Label Text="Insira seu e-mail e senha para acessar sua conta."  
                       FontSize="16" TextColor="White" />
            </StackLayout>
        </Grid>

        <!-- Formulário de login -->
        <Border Grid.Row="1"  
                BackgroundColor="#FFFFFF"  
                StrokeShape="RoundRectangle 24"  
                Padding="24,44,24,24"  
                VerticalOptions="End"  
                Stroke="Transparent">
            <VerticalStackLayout Spacing="20">

                <Border BackgroundColor="#FFFFFF"
                        Stroke="#DDDDDD"
                        HeightRequest="48"
                        Padding="12,0"
                        Margin="0,10,0,0">
                    <HorizontalStackLayout Spacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Source="google.svg" HeightRequest="24" WidthRequest="24" />
                        <Label Text="Entrar com Google"
                               TextColor="#E94560"
                               FontAttributes="Bold"
                               VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Border>

                <!-- Campos de login -->
                <Label Text="Email" FontSize="14" TextColor="#E94560" FontAttributes="Bold" />
                <Entry Placeholder="Insira seu Email"  
                       Keyboard="Email"  
                       TextColor="#121212"  
                       PlaceholderColor="#888888"  
                       BackgroundColor="#FFFFFF"  
                       Margin="0,0,0,0"  
                       Text="{Binding Email}" />

                <Label Text="Senha" FontSize="14" TextColor="#E94560" FontAttributes="Bold" />
                <Entry Placeholder="Insira sua senha"  
                       IsPassword="True"  
                       TextColor="#121212"  
                       PlaceholderColor="#888888"  
                       BackgroundColor="#FFFFFF"  
                       Margin="0,0,0,0"  
                       Text="{Binding Password}" />

                <Button Text="Entrar"
                        Margin="0,0,0,0"
                        BackgroundColor="#E94560"
                        TextColor="#FFFFFF"
                        CornerRadius="12"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        BorderColor="Transparent"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsNotBusy}" />

                <!-- Link para cadastro -->
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="4">
                    <Label Text="Não tem uma conta?" TextColor="#E94560" VerticalOptions="Center" />
                    <Button Text="Cadastre-se"  
                            BackgroundColor="Transparent"  
                            TextColor="#0F3460"  
                            Padding="0"  
                            Command="{Binding NavigateToRegisterCommand}" />
                </HorizontalStackLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
