<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:viewmodels="clr-namespace:acheesporte_athlete_app.ViewModels"  
             x:Class="acheesporte_athlete_app.Views.LoginPage"  
             Shell.BackgroundColor="#200937"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="Animated"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,0.85">
            <GradientStop Color="#200937" Offset="0.0" />
            <GradientStop Color="#3A1155" Offset="0.3" />
            <GradientStop Color="#6A1B9A" Offset="0.6" />
            <GradientStop Color="#8B2BB8" Offset="0.8" />
            <GradientStop Color="#A75AEF" Offset="0.85" />
            <GradientStop Color="#F7F8FA" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <!-- Topo com logo e título -->
        <Grid Grid.Row="0" Padding="24,4,4,4" HeightRequest="180">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Image Source="logo_achesporte.png"  
                   HeightRequest="68" WidthRequest="68"
                   VerticalOptions="Start" HorizontalOptions="End"
                   Grid.Column="1" Margin="4" />

            <StackLayout VerticalOptions="Start" HorizontalOptions="Start" Spacing="0"
                         Grid.Column="0" Margin="0,64,0,0">
                <Label Text="Bem-vindo," FontSize="28" FontAttributes="Bold" TextColor="White" />
                <Label Text="Atleta!" FontSize="32" FontAttributes="Bold" TextColor="#FF851B" />
                <Label Text="Insira seu e-mail e senha para acessar sua conta."
                       FontSize="16" TextColor="#D1C4E9" />
            </StackLayout>
        </Grid>

        <!-- Formulário de login -->
        <Frame Grid.Row="1"
               BackgroundColor="#F7F8FA"
               CornerRadius="24"
               Padding="24,44,24,24"
               VerticalOptions="EndAndExpand"
               HasShadow="True"
               BorderColor="Transparent">
            <StackLayout Spacing="20">

                <!-- Botões de alternância (Login/Cadastro) -->
                <Grid HorizontalOptions="CenterAndExpand" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="150" />
                    </Grid.ColumnDefinitions>

                    <Frame Grid.ColumnSpan="2" BackgroundColor="White"
                           CornerRadius="30" BorderColor="Transparent"
                           Padding="0" HasShadow="False"
                           HeightRequest="60"
                           VerticalOptions="Center" HorizontalOptions="FillAndExpand" />

                    <Button x:Name="LoginToggleButton"
                            Text="Login"
                            Grid.Column="0"
                            BackgroundColor="#200937"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="30"
                            HeightRequest="56"
                            Margin="4"
                            Padding="0"
                            BorderColor="Transparent"
                            BorderWidth="0"
                            VerticalOptions="Center"
                            HorizontalOptions="FillAndExpand"
                            Clicked="OnLoginToggleClicked" />

                    <Button x:Name="RegisterToggleButton"
                            Text="Cadastro"
                            Grid.Column="1"
                            BackgroundColor="Transparent"
                            TextColor="#200937"
                            FontAttributes="Bold"
                            CornerRadius="30"
                            HeightRequest="56"
                            Margin="4"
                            Padding="0"
                            BorderColor="Transparent"
                            BorderWidth="0"
                            VerticalOptions="Center"
                            HorizontalOptions="FillAndExpand"
                            Command="{Binding NavigateToRegisterCommand}" />
                </Grid>

                <!-- Campos de login -->
                <Label Text="Usuário" FontSize="14" TextColor="#200937" FontAttributes="Bold" />
                <Entry Placeholder="Insira seu Email"
                       Keyboard="Email"
                       TextColor="#200937"
                       PlaceholderColor="#888"
                       BackgroundColor="White"
                       Margin="0,0,0,8"
                       Text="{Binding Email, Mode=TwoWay}" />

                <Label Text="Senha" FontSize="14" TextColor="#200937" FontAttributes="Bold" />
                <Entry Placeholder="Insira sua senha"
                       IsPassword="True"
                       TextColor="#200937"
                       PlaceholderColor="#888"
                       BackgroundColor="White"
                       Margin="0,0,0,8"
                       Text="{Binding Password, Mode=TwoWay}" />

                <!-- Botão Login -->
                <Button Text="Entrar"
                        Margin="20,0,0,0"
                        BackgroundColor="#200937"
                        TextColor="White"
                        CornerRadius="12"
                        HeightRequest="48"
                        FontAttributes="Bold"
                        BorderColor="Transparent"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsNotBusy}" />

                <!-- Link para cadastro -->
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="4">
                    <Label Text="Não tem uma conta?" TextColor="#200937" VerticalOptions="Center" />
                    <Button Text="Cadastre-se"
                            BackgroundColor="Transparent"
                            TextColor="#FF851B"
                            Padding="0"
                            BorderColor="Transparent"
                            VerticalOptions="Center"
                            Command="{Binding NavigateToRegisterCommand}" />
                </StackLayout>

            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
